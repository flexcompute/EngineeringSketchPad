#
!IFNDEF ESP_ROOT
!ERROR ESP_ROOT must be set -- Please fix the environment...
!ENDIF
#
IDIR  = $(ESP_ROOT)\include
!include $(IDIR)\$(ESP_ARCH).$(MSVC)
LDIR  = $(ESP_ROOT)\lib
!IFDEF ESP_BLOC
ODIR  = $(ESP_BLOC)\obj
TDIR  = $(ESP_BLOC)\test
!ELSE
ODIR  = .
TDIR  = $(ESP_ROOT)\bin
!ENDIF

!IFNDEF SEACAS
default:
	@echo "Not compiling spinnakerAIM: SEACAS must be set -- Please fix the environment...."
!ELSE
default: $(LDIR)\spinnakerAIM.dll
!ENDIF

OBJS =	$(ODIR)\spinnakerAIM.obj $(ODIR)\libmeshb7.obj

$(LDIR)\spinnakerAIM.dll:	spinnakerAIM.def $(OBJS) $(LDIR)\utils.lib
	-del $(LDIR)\spinnakerAIM.dll $(LDIR)\spinnakerAIM.lib $(LDIR)\spinnakerAIM.exp
	 link /out:$(LDIR)\spinnakerAIM.dll /dll /def:spinnakerAIM.def \
		$(OBJS) /LIBPATH:$(LDIR) utils.lib aimUtil.lib \
		ocsm.lib egads.lib udunits2.lib
	$(MCOMP) /manifest $(LDIR)\spinnakerAIM.dll.manifest \
		/outputresource:$(LDIR)\spinnakerAIM.dll;2

$(ODIR)\spinnakerAIM.obj:	spinnakerAIM.c spinnakerUtils.h $(IDIR)\capsTypes.h \
			..\utils\meshUtils.h
	cl /c $(COPTS) $(DEFINE) /I$(IDIR) /I..\meshWriter\exodusWriter /I..\utils spinnakerAIM.c \
		/Fo$(ODIR)\spinnakerAIM.obj

$(ODIR)\libmeshb7.obj:	..\meshWriter\libMeshbWriter\libMeshb\sources\libmeshb7.c \
						..\meshWriter\libMeshbWriter\libMeshb\sources\libmeshb7.h
	cl /c $(COPTS) $(DEFINE) /I$(IDIR) /I..\meshWriter\libMeshbWriter\libMeshb\sources \
		..\meshWriter\libMeshbWriter\libMeshb\sources\libmeshb7.c \
		/Fo$(ODIR)\libmeshb7.obj

clean:
	-del $(OBJS)

cleanall:	clean
	-del $(LDIR)\spinnakerAIM.dll $(LDIR)\spinnakerAIM.lib $(LDIR)\spinnakerAIM.exp
